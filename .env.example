# Development Environment Configuration
# Copy this to .env and modify as needed for your environment

# ============================================================================
# DOCKER COMPOSE CONFIGURATION
# ============================================================================
COMPOSE_PROJECT_NAME=patient-management
COMPOSE_FILE=docker-compose.yml

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=patient_db
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432

# MySQL
MYSQL_ROOT_PASSWORD=mysql123
MYSQL_USER=developer
MYSQL_PASSWORD=developer123
MYSQL_DB=patient_db
MYSQL_HOST=mysql
MYSQL_PORT=3306

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=mongodb123
MONGO_INITDB_DATABASE=patient_db
MONGO_HOST=mongodb
MONGO_PORT=27017

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_BROKER_ID=1
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092

# ============================================================================
# SERVICE PORTS
# ============================================================================
API_GATEWAY_PORT=4004
PATIENT_SERVICE_PORT=8080
AUTH_SERVICE_PORT=8089
DOCTOR_SERVICE_PORT=8083
APPOINTMENT_SERVICE_PORT=8084
BILLING_SERVICE_PORT=8081
ANALYTICS_SERVICE_PORT=8082

# ============================================================================
# SPRING BOOT CONFIGURATION
# ============================================================================
SPRING_PROFILES_ACTIVE=dev
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# ============================================================================
# SECURITY & SECRETS
# ============================================================================
JWT_SECRET=your-secret-jwt-key-change-in-production
API_KEY=your-api-key-change-in-production
DATABASE_ENCRYPTION_KEY=your-encryption-key-change-in-production

# ============================================================================
# KUBERNETES CONFIGURATION
# ============================================================================
MINIKUBE_PROFILE=minikube
MINIKUBE_DRIVER=docker
K8S_NAMESPACE=patient-management
K8S_IMAGE_TAG=v1.0.0

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
SPRING_CLOUD_CONFIG_ENABLED=false
